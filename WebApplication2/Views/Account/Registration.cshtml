@{
    ViewData["Title"] = "Main Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WebApplication2.ModelView.RegisterViewModel

<form method="post" asp-controller="Account" asp-action="Registration" style="text-align: center">
    <div asp-validation-summary="ModelOnly"></div>
    <h2>Registration</h2>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email"/>
        <span asp-validation-for="Email"></span>
    </div>
     <div>
        <label asp-for="Year"></label><br />
        <input asp-for="Year"/>
        <span asp-validation-for="Year"></span>
    </div>
     <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm"/>
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
     <div>
      <input type="submit" value="Registration" />

     </div>

</form>

