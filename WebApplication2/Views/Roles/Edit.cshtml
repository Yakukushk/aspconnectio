@using Microsoft.AspNetCore.Identity
@model WebApplication2.ModelView.RoleViewModel

<h2>Role for users @Model.UsersEmail</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UsersID" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.Roles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
            @(Model.UsersRoles.Contains(role.Name) ? "checked=\"checked\"":"") />@role.Name<br/>
            

        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>